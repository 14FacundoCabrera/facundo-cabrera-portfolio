---
import { Icon } from "astro-icon/components";
 const {title, icon, learned} = Astro.props;
---

<div class="flex items-center p-3 bg-slate-500 rounded aspect-square size-28">
   <Icon name={icon} class={'size-full text-slate-900'}/>
   <div class="absolute size-28 hover:bg-black/40 opacity-0 hover:opacity-100 -translate-x-3 ease-in-out duration-300 transition-all flex items-center justify-center flex-col">
      <p class="font-bold text-center">{title}</p>
      <p class="font-semibold text-xs text-center">{learned}</p>
   </div>
</div>


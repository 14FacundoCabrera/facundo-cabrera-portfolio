---
import { Icon } from "astro-icon/components"

const {title, icon, link} = Astro.props
---

<div id={title} class="size-17 bg-slate-600 p-3 rounded-full shadow-2xl border-2 border-black hover:bg-slate-500 transition-all duration-200">
    <a href={link}>
        <Icon name={icon} class={'size-full text-slate-900'}/>
    </a>
</div>
---
import { getCollection } from "astro:content";
import HeroCard from "./HeroCard.astro";
const { collectionName } = Astro.props
type EntryData = {
  title: string;
  learned: boolean;
  icon: string;
};
const collection = await getCollection(collectionName) as {data : EntryData}[];
const getGridColsClass = (length: number) => {
  if (length >= 5) return "md:grid-cols-5";
  switch (length) {
    case 1: return "md:grid-cols-1";
    case 2: return "md:grid-cols-2";
    case 3: return "md:grid-cols-3";
    case 4: return "md:grid-cols-4";
    default: return "md:grid-cols-5";
  }
};
---


<div class="bg-slate-900 p-5 scroll-fade sticky shadow-slate-900 shadow-lg/80 rounded-2xl max-w-xl">
  <div class="flex justify-center gap-4 flex-wrap">
    {collection.map((entry, index) => {
      const { title, learned, icon } = entry.data;
      return (
        <div>
          <HeroCard title={title} learned={learned} icon={icon} />
        </div>
      );
    })}
  </div>
</div>

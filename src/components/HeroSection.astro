---
import HeroGrid from "./HeroGrid.astro";
const {title, collectionName} = Astro.props

---

<section id={collectionName} class="h-screen w-full flex justify-center items-center">
  <div  class=`flex flex-col items-center justify-center`>
    <h2 class="mb-3 text-3xl text-slate-900 font-black text-center">{title}</h2>
    <HeroGrid collectionName={collectionName}/>
  </div>
</section>
<div class="h-[30vh]"></div> 